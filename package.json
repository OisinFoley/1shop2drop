{
  "name": "1shop2drop__server",
  "version": "1.0.0",
  "description": "fictional ecommerce app with mocked payment functionality",
  "author": "OisinFoley <oisinfoley@yahoo.co.uk>",
  "main": "server.js",
  "license": "MIT",
  "dependencies": {
    "1shop2drop-types": "1.0.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mongoose": "^5.11.7",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "tslint": "^6.1.3"
  },
  "scripts": {
    "build": "tsc -p . && cp .env ./dist/.env",
    "build-all": "yarn run build-client && yarn run build && cp -r ./client/dist ./dist/client",
    "build-client": "yarn --cwd ./client run build",
    "client": "yarn --cwd ./client run start",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "server": "ts-node-dev src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/jwt-decode": "^3.1.0",
    "@types/mongoose": "^5.10.2",
    "@types/node": "^14.14.12",
    "@types/passport": "^1.0.5",
    "@types/passport-jwt": "^3.0.3",
    "gts": "^3.1.0",
    "html-webpack-plugin": "^4.4.1",
    "node-sass": "^5.0.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.0.5"
  }
}
