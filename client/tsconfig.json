{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/components",
    "src/custom.d.ts",
    "src/user/components/SignUp.component.tsx",
    "src/user/components/SignIn.component.tsx",
    "src/header",
    "src/shared/components/FormInput.component.tsx",
    "src/shared/components/CustomButton.component.tsx",
    "src/shop/components/CollectionPreview.component.tsx",
    "src/shop/components/CollectionItem.component.tsx",
    "src/home/components/MenuItem.component.tsx",
    "src/checkout/components/checkout-item",
    "src/cart/cart-item",
    "src/cart/cart-icon",
    "src/cart/cart-dropdown"
  ],
  "exclude": ["node_modules"]
}
